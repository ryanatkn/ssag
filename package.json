{
  "name": "@ryanatkn/ssag",
  "description": "ssag",
  "version": "0.0.1",
  "type": "module",
  "homepage": "https://www.ssag.dev/",
  "engines": {
    "node": ">=18.6"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "devDependencies": {
    "@feltjs/eslint-config": "^0.2.1",
    "@feltjs/felt-ui": "^0.49.0",
    "@feltjs/gro": "^0.71.0",
    "@feltjs/util": "^0.6.0",
    "@sveltejs/adapter-static": "^2.0.1",
    "@sveltejs/kit": "^1.7.2",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "prettier": "^2.8.4",
    "prettier-plugin-svelte": "^2.9.0",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-preprocess-esbuild": "^3.0.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "uvu": "^0.5.6"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@feltjs",
    "ignorePatterns": [
      "svelte.config.js",
      "vite.config.js"
    ]
  },
  "prettier": {
    "useTabs": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "overrides": [
      {
        "files": "package.json",
        "options": {
          "useTabs": false
        }
      }
    ]
